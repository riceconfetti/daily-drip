---
import "../styles/style.css";
import { ViewTransitions } from "astro:transitions";
import "remixicon/fonts/remixicon.css";
import NavBar from "../components/NavBar.svelte";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class="bg-light relative h-dvh w-dvw">
    <NavBar client:load>
      <!-- relative flex flex-col overflow-x-hidden h-dvh w-dvw items-center lg:overflow-hidden -->
      <div
        class="p-2 w-full flex flex-1 justify-center lg:min-h-0 lg:p-4 lg:overflow-auto"
      >
        <slot />
      </div>
    </NavBar>
  </body>
</html>
