---
import ChronicleIcon from "./ChronicleIcon.astro";
import c from "../assets/characters.json";
import { Character } from "../classes/character";
const { characters, weapons } = Astro.props;
---

<div class="chronicle">
  <div class=`chronicle-header`>
    <h2>Chronicle Wish</h2>
  </div>
  <div class="banners">
    <div class="characters">
      {
        characters.map((character) => {
          let char = character;
          let spec = false;

          if (char && char.includes("?")) {
            char = char.slice(0, -1);
            spec = true;
          }

          return <ChronicleIcon character={new Character(char, c[char.replace(/\s/g, "")])} spec={spec} img={c[char].splash} />;
        })
      }
    </div>
    <ul class="weapons">
      {
        weapons.map((w) => {
          const weaponIMG = "./weapons/" + w.replace(/\s/g, "") + ".png";
          let weap = w;
          let spec = false;

          if (weap && weap.includes("?")) {
            weap = weap.slice(0, -1);
            spec = true;
          }
          return ;
        })
      }
    </ul>
  </div>
</div>

<style lang="scss">
  .chronicle {
    border: 1px solid;
    background-color: #b4b4b4;
    gap: 1rem;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;

    .chronicle-header {
      display: flex;
      height: max-content;
      padding: 12px;
      border: 1px solid #000;
      background: #232323;
      justify-content: space-between;
      align-items: center;
      align-self: stretch;

      h2 {
        color: white;
        font-family: "Playfair Display";
        font-size: 16px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
      }
    }

    .banners {
      display: flex;
      padding: 0.75rem;
      gap: 3rem;
      @media only screen and (max-width: 700px) {
        flex-direction: column;
      }
      .characters {
        display: flex;
        width: 50%;
        gap: 0.5rem;
      }
      .weapons {
        display: flex;
        gap: 0.5rem;
        width: 50%;
        img {
          width: 100%;
          background-image: url("/backgrounds/genshin.png");
        }
      }
    }
  }
</style>
