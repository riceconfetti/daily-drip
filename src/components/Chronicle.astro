---
import ChronicleIcon from "./ChronicleIcon.astro";
import c from "../assets/characters.json";
import { Character } from "../classes/character";
import { Weapon } from "../classes/weapon";
const { characters, weapons } = Astro.props;
---

<div class="chronicle">
  <div class=`chronicle-header`>
    <h2>Chronicle Wish</h2>
  </div>
  <div class="banners">
    <div class="characters">
      {
        characters.map((character) => {
          let char = character;
          let spec = false;

          if (char && char.includes("?")) {
            char = char.slice(0, -1);
            spec = true;
          }

          return (
            <ChronicleIcon
              type="character"
              data={new Character(char, c[char.replace(/\s/g, "")])}
              spec={spec}
            />
          );
        })
      }
    </div>
    <ul class="weapons">
      {
        weapons.map((w) => {
          const weaponIMG = "./weapons/" + w.replace(/\s/g, "") + ".png";
          let weap = w;
          let spec = false;

          if (weap && weap.includes("?")) {
            weap = weap.slice(0, -1);
            spec = true;
          }
          return (
            <ChronicleIcon
              type="weapon"
              data={
                new Weapon(weap, {
                  rarity: 5,
                  element: "genshin",
                  splash: weaponIMG,
                })
              }
              spec={spec}
            />
          );
        })
      }
    </ul>
  </div>
</div>

<style lang="scss">
  .chronicle {
    border: 1px solid;
    background-color: #b4b4b4;
    gap: 1rem;
    display: flex;
    flex-direction: column;
    align-content: center;
    justify-content: center;

    .chronicle-header {
      display: flex;
      height: max-content;
      padding: 12px;
      border: 1px solid #000;
      background: #232323;
      justify-content: space-between;
      align-items: center;
      align-self: stretch;

      h2 {
        color: white;
        font-family: "Playfair Display";
        font-size: 16px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
      }
    }

    .banners {
      display: flex;
      width: 100%;
      padding: 1rem;
      gap: 1rem;
      @media only screen and (max-width: 700px) {
        flex-direction: column;
      }
      .characters, .weapons {
        display: flex;
        flex-wrap: wrap;
      }
    }
  }
</style>
