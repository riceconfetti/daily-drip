---
interface Props {
    version: string;
    title: string;
    date: Date;
}

const { version, title, date } = Astro.props;
---

<div class="version-header">
    <div class="version-lines">
        <p id="version-number">{version}</p>
        <p id="version-date">
            {
                date.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "short",
                    day: "numeric"
                })
            }
        </p>
        <p id="version-title">{title}</p>
    </div>
</div>

<style lang="scss">
    .version-header {
        display: flex;
        padding-block: 2px;
        width: 100%;
        border-block: 0.5px solid #000;

        .version-lines {
            position: relative;
            padding-block: .7rem;
            display: flex;
            width: 100%;
            justify-content: space-between;
            border-block: 0.5px solid #000;
            text-transform: uppercase;
            line-height: 100%;
            p{
                font-size:16px;
            }

            @media only screen and (max-width:675px) {
                p {
                    font-size: 10px;
                }
            }
            #version-title {
                position: absolute;
                width: 100%;
                text-align: center;
            }
        }
    }
</style>
