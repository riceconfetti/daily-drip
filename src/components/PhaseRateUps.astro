---
import { Character } from "../classes/character";
interface Props {
  characters: Array<Character>;
  weapons: Array<String>;
}

const { characters, weapons } = Astro.props;
---

<div class="phase-rate-ups">
  <div class="divider"></div>
  <h3>Featured 4 Stars</h3>
  {
    Array.from({ length: 3 }, (_, i) => {
      let spec;
      if (characters[i]) {
        if (characters[i].name.includes("?")) {
          characters[i].name = characters[i].name.slice(0, -1);
          spec = true;
        }
        return (
          <div
            class={`character`}
            style={`background: var(--${
              characters[i].element ? characters[i].element : "default"
            });`}
          >
          {spec ? "✧ " : ""}{characters[i].name}
          </div>
        );
      } else {
        return (
          <div class="character" style={`background: var(--default);`}>
            ????
          </div>
        );
      }
    })
  }
  <div class="divider"></div>
  <h3>Rate Up Weapons</h3>
  <p>
    {
      Array.from({ length: 5 }, (_, i) => {
        let dot = "";
        if (i < 4) {
          dot = " ⦁ ";
        }
        if (weapons[i]) {
          return weapons[i] + dot;
        } else {
          return "?????" + dot;
        }
      })
    }
  </p>
  <div class="divider"></div>
</div>

<style lang="scss">
  .phase-rate-ups {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: flex-start;
    align-self: stretch;
    width: 100%;

    h3 {
      font-size: clamp(0.8rem, 2.4vw, 1.2rem);
    }

    p {
      font-size: 1rem;
      @media only screen and (max-width: 675px) {
        font-size: 0.75rem;
      }
    }
    .divider {
      height: 1px;
      align-self: stretch;
      background: black;
    }
    .character {
      display: flex;
      padding: 4px;
      font-size: 1rem;
      align-items: flex-start;
      gap: 10px;
      align-self: stretch;
      color: #fff;
      @media only screen and (max-width: 675px) {
        font-size: 0.75rem;
      }
    }
  }
</style>
