{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "$components/*": ["src/components/*"],
      "$assets/*": ["src/assets/*"],
      "$services/*": ["src/services/*"],
      "$content/*": ["src/content/*"],
      "$layouts/*": ["src/layouts/*"],
      "$pages/*": ["src/pages/*"],
      "$types/*": ["src/types/*"],
      "$utilities/*": ["src/utilities/*"]
    }
  }
}
