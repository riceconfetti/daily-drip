      "$assets/*": ["src/assets/*"],
      "$classes": ["src/classes"],
      "$content/*": ["src/content"],
      "$layouts/*": ["src/layouts"],
      "$pages/*": ["src/pages"],
      "$styles/*": ["src/styles"],
      "$scripts/*": ["src/scripts"],
      "$utils/*": [""]
    }
  }
}
